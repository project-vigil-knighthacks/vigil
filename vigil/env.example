# Environment Variables

PROJECT_NAME=vigil-siem
ENVIRONMENT=development

# FASTAPI BACKEND
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_KEY=change-me-to-a-random-secret
SECRET_KEY=change-me-to-a-long-random-string
DEBUG=true

# ELASTICSEARCH
ES_HOST=elasticsearch
ES_PORT=9200
ES_SCHEME=http
ES_INDEX_PREFIX=vigil-logs
ES_JAVA_OPTS=-Xms512m -Xmx512m
ES_DISCOVERY_TYPE=single-node
ES_XPACK_SECURITY_ENABLED=false

# POSTGRESQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=vigil
POSTGRES_USER=vigil
POSTGRES_PASSWORD=change-me

# FILEBEAT
FILEBEAT_LOG_PATH=/var/log/dummy-site/access.log

# REACT FRONTEND
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws/logs

# DUMMY SITE
DUMMY_SITE_PORT=5000
DUMMY_LOG_OUTPUT=/var/log/dummy-site/access.log

